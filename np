#!/bin/bash
#  np: New Project C/C++ build system

rootdir=$(pwd) # Current directory, for reference (this will serve as our "home")

# Embedded files
project_json=$(cat <<EOF
{
  "projectname": "*np_name",
  "stdversion": "*np_stdver",
  "configurations": [
    {
      "configname": "*np_confname",
      "os": "*np_os",
      "arch": "*np_arch",
      "gcc": "*np_gcc",
      "g++": "*np_gpp",
      "compilerargs": [
        "*np_args"
      ],
      "sourcefiles": [
        "*np_srcfiles"
      ],
      "cincludedirs": [
        "*np_cincs"
      ],
      "cppincludedirs": [
        "*np_cppincs"
      ],
      "libdirs": [
        "*np_libdirs"
      ],
      "ldlibs": [
        "*np_ldlibs"
      ]
    }
  ],
  "vscodeintegration": "np_vsctrf",
  "vscodefolder": "*np_vscf"
}
EOF
)

xit() {
  printf "\033[0m"
  exit 0
}

new_project_wizard() {
  while true; do # Project name
    printf "\n\nValid characters for project name: a-z, A-Z, 0-9, and underscore (_). Cannot start with a number or capital letter.\n\033[1m\033[38;2;86;255;71mProject name\033[0m: "
    read np_name

    if [[ $np_name =~ [^a-zA-Z0-9_] ]]; then
      echo "Project name contains characters other than a-z, A-Z, 0-9, or underscore. Please enter a new name."
    else
      printf "Project name is valid: \033[4m$np_name\033[0m\n"
      break
    fi
  done
  while true; do # C Standard version
    printf "\nValid C standard versions: c89,c99,c11,c17,c23,gnu89,gnu99,gnu11,gnu17,gnu23\n\033[1m\033[38;2;241;255;71mC standard version\033[0m: "
    read np_cstdver

    if [[ $np_cstdver == "c89" || $np_cstdver == "c99" || $np_cstdver == "c11" || $np_cstdver == "c17" || $np_cstdver == "c23" || $np_cstdver == "gnu89" || $np_cstdver == "gnu99" || $np_cstdver == "gnu11" || $np_cstdver == "gnu17" || $np_cstdver == "gnu23" ]]; then
      printf "Valid C standard version \033[4m$np_cstdver\033[0m entered."
      break
    else
      echo "Invalid C standard version."
    fi
  done
  while true; do # C++ Standard version
    printf "\n\nValid C++ standard versions: c++98,c++03,c++11,c++14,c++17,c++20,c++23,gnu++98,gnu++03,gnu++11,gnu++14,gnu++17,gnu++20,gnu++23\n\033[1m\033[38;2;50;255;255mC++ standard version\033[0m: "
    read np_cppstdver

    if [[ $np_cppstdver == "c++98" || $np_cppstdver == "c++03" || $np_cppstdver == "c++11" || $np_cppstdver == "c++14" || $np_cppstdver == "c++17" || $np_cppstdver == "c++20" || $np_cppstdver == "c++23" || $np_cppstdver == "gnu++98" || $np_cppstdver == "gnu++03" || $np_cppstdver == "gnu++11" || $np_cppstdver == "gnu++14" || $np_cppstdver == "gnu++17" || $np_cppstdver == "gnu++20" || $np_cppstdver == "gnu++23" ]]; then
      printf "Valid C++ standard version \033[4m$np_cppstdver\033[0m entered."
      break
    else
      echo "Invalid C++ standard version."
    fi
  done
}

regenerate_buildscript() {
  printf "\nthis is not what it sounds like\n"
  xit
}

if [ -f "$rootdir/.np/project.json" ]; then
  printf "Regenerating build script...\n"
  regenerate_buildscript
  xit
fi

printf "No project exists in your current working directory. Would you like to create a new one? \033[1m[Y/n]\033[0m "
read -n 1 -r
if [[ $REPLY =~ ^[Nn]$ ]]; then
  printf "\nThen why did you launch this script???\n"
  xit
fi
if [[ $REPLY =~ ^[Yy]$ ]]; then
  new_project_wizard
  #mkdir -p .np
  #echo $project_json | jq -s '' >> .np/project.json # Extract project.json
  xit
fi

printf "\033[0m"
exit 0